@page "{id:int}"
@model EmployeeManagementSystem_Enlighten_Schola.Pages.Admin.EditEmployeeModel
@{
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Input.EmployeeId" />

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Input.FirstName" class="form-label"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.LastName" class="form-label"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Mobile" class="form-label"></label>
                <input asp-for="Input.Mobile" class="form-control" />
                <span asp-validation-for="Input.Mobile" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Gender" class="form-label"></label>
                <select asp-for="Input.Gender" class="form-control">
                    <option value="">-- Select Gender --</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.DOB" class="form-label"></label>
                <input asp-for="Input.DOB" type="date" class="form-control" />
                <span asp-validation-for="Input.DOB" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.DOJ" class="form-label"></label>
                <input asp-for="Input.DOJ" type="date" class="form-control" />
                <span asp-validation-for="Input.DOJ" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Input.Designation" class="form-label"></label>
                <input asp-for="Input.Designation" class="form-control" />
                <span asp-validation-for="Input.Designation" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Address" class="form-label"></label>
                <input asp-for="Input.Address" class="form-control" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.City" class="form-label"></label>
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.PinCode" class="form-label"></label>
                <input asp-for="Input.PinCode" class="form-control" />
                <span asp-validation-for="Input.PinCode" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Input.IsActive" class="form-check-input" />
                <label asp-for="Input.IsActive" class="form-check-label"></label>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ProfilePhoto" class="form-label"></label>
                <input asp-for="Input.ProfilePhoto" type="file" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.Input.ProfilePhotoPath))
                {
                    <div class="mt-2">
                        <img src="@Model.Input.ProfilePhotoPath" class="img-thumbnail" style="max-height: 150px;" />
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Update</button>
        <a asp-page="/Admin/Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
